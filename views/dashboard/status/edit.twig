{% extends '_layout/dashboard/layout.twig' %}

{% block title %} Modification d'un status {% endblock %}

{% block breadCrumb %}
    {{ breadcrumb('','', status.title) | raw }}
{% endblock %}

{% block body %}
    <div class="section--admin">
        <div class="container">
            <div class="admin-content">
                {{ include('_notifications.twig') }}
                <form method="post" action="#">
                    <div class="card-custom">
                        <div class="card-header"><h2>Modifier le statut - {{ status.title }}</h2></div>
                        <div class="card-body">
                            <div class="admin-form">
                                {{ include('dashboard/status/_form.twig') }}
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}