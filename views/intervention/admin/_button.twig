<h3>Actions pour cette intervention</h3>
{{ form.submitSingle('primary', 'update', 'Enregistrer', 'save') | raw }}
{% if intervention.closed is null %}
{{ form.submitSingle('info','update_inter', 'Mettre à jour la date', 'clock-time') | raw }}
{% endif %}
{% if intervention.start is null %}
{{ form.submitSingle('warning', 'start_inter', 'Débuter l\'intervention ') | raw }}
{% endif %}
<a href="/admin/intervention/html/{{ intervention.id }}" title="Fiche d'intervention HTML" class="btn btn-info" target="_blank"><i class="icofont-file-html5"></i> Fiche HTML</a>
